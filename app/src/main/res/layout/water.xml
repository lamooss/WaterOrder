<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="2.5dp"
    android:paddingBottom="2.5dp"
    android:paddingRight="2.5dp"
    android:paddingLeft="2.5dp">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal"
        android:padding="10dp"
        >

        <TextView
            android:id="@+id/water_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginLeft="38dp"
            android:layout_marginStart="38dp"
            android:padding="8dp"
            android:text="제주 삼다수"
            android:textColor="#000000"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/water_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_toEndOf="@+id/water_name"
            android:layout_toRightOf="@+id/water_name"
            android:padding="8dp"
            android:text="1.8"
            android:paddingRight="1dip"
            android:textColor="#000000"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/water_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_toEndOf="@+id/water_size"
            android:layout_toRightOf="@+id/water_size"
            android:padding="8dp"
            android:text="L"
            android:textColor="#000000"
            android:textSize="18dp" />


        <TextView
            android:id="@+id/quantity_text_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/water_type"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_toEndOf="@+id/guidTextView"
            android:layout_toRightOf="@+id/guidTextView"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingTop="8dip"
            android:text="0"
            android:textColor="#000000"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/guidTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="43dp"
            android:layout_marginRight="43dp"
            android:layout_toLeftOf="@+id/eaTextView"
            android:layout_toStartOf="@+id/eaTextView"
            android:text="갯수입력 : " />

        <EditText
            android:id="@+id/quantityEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/guidTextView"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/guidTextView"
            android:layout_marginLeft="63dp"
            android:layout_marginStart="63dp"
            android:ems="100000"
            android:inputType="number" />

        <TextView
            android:id="@+id/eaTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/water_type"
            android:layout_alignBottom="@+id/water_type"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="EA" />

        <TextView
            android:id="@+id/water_id"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_weight="12"
            android:padding="8dp"
            android:text="1"
            android:textColor="#000000"
            android:textSize="18dp" />

    </RelativeLayout>

</LinearLayout>