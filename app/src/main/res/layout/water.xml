<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="2.5dp"
    android:paddingBottom="2.5dp"
    android:paddingRight="2.5dp"
    android:paddingLeft="2.5dp">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/water_id"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_above="@+id/water_size"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:layout_weight="12"
            android:padding="8dp"
            android:text="1"
            android:textColor="#000000"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/water_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_toEndOf="@+id/water_id"
            android:layout_toRightOf="@+id/water_id"
            android:padding="8dp"
            android:text="제주 삼다수"
            android:textColor="#000000"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/water_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/water_name"
            android:layout_gravity="center"
            android:layout_toEndOf="@+id/water_id"
            android:layout_toRightOf="@+id/water_id"
            android:padding="8dp"
            android:paddingRight="1dip"
            android:text="1.8"
            android:textColor="#000000"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/water_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/water_size"
            android:layout_alignBottom="@+id/water_size"
            android:layout_gravity="center"
            android:layout_toEndOf="@+id/water_size"
            android:layout_toRightOf="@+id/water_size"
            android:padding="8dp"
            android:text="L"
            android:textColor="#000000"
            android:textSize="18dp" />


        <Button
            android:id="@+id/decrementButton"
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:layout_alignBaseline="@+id/quantity_text_view"
            android:layout_alignBottom="@+id/quantity_text_view"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:onClick="decrement"
            android:text="-" />

        <TextView
            android:id="@+id/quantity_text_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/button2"
            android:layout_alignBottom="@+id/button2"
            android:layout_alignLeft="@+id/decrementButton"
            android:layout_alignStart="@+id/decrementButton"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="34dp"
            android:layout_marginStart="34dp"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingTop="8dip"
            android:text="100"
            android:textColor="#000000"
            android:textSize="18dp" />

        <Button
            android:id="@+id/incrementButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/quantity_text_view"
            android:layout_toEndOf="@+id/quantity_text_view"
            android:layout_toRightOf="@+id/quantity_text_view"
            android:layout_weight="1"
            android:text="+" />

        <Button
            android:id="@+id/button2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/water_type"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/incrementButton"
            android:layout_toRightOf="@+id/incrementButton"
            android:text="주문신청\n SMS발송" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/button2"
            android:layout_toEndOf="@+id/water_name"
            android:layout_toRightOf="@+id/water_name"
            android:ems="10"
            android:textColor="#000000"
            android:inputType="number" />

    </RelativeLayout>

</LinearLayout>